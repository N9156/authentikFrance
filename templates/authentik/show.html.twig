{% extends 'base.html.twig' %}

{% block title %} AuthentikFrance | Site {% endblock %}
 
{% block body %}

     <div class="col-md-12 card shadow-lg p-3 mb-3 bg-#d4f3ef rounded">

        <div class="card-header">
            <h2 class="text-center">{{ site.title }}</h2>
        </div>

        <div class="card-body">
            <img src="{{ site.image|replace({"200": "640/480"}) }}" class="card-img-top rounded-pill" alt="{{ site.title }}">
                
            <h4 class="text-center font-italic">{{ site.content|raw }}</h4>
            <hr>
            <p class="text-righ">{{ site.adress }}</p>
            <hr>
            <p class="text-righ">{{ site.contactProfessionnel }}</p>
            <p class="text-righ">{{ site.phone }}</p>
            <p class="text-righ">{{ site.mail }}</p>
            <p class="text-righ ">{{ site.url }}</p>  
        </div>

        <div class="card-footer">
            <a href=""><button type="button" class="btn btn-outline-info float-right"><i class="far fa-comments">Faire de commentaire</i></button></a>
        </div>

    </div>


    <h3>Quel est votre commentaire ? ({{ article.commentaires|length }})</h3>
       
    {% for commentaire in article.commentaires %}
            <p> Publié par {{commentaire.pseudo }}</p>
             <div>{{ commentaire.contenu }}</div>

        {% else %}
        <p>Il n'y a pas encore de commentaire</p>
        {% endfor %}


        <h3>{% trans %}What is your comments{% endtrans %} ({{ article.commentaires|length }})</h3>
        
        {% for commentaire in article.commentaires %}
            <p>{% trans %}Published by{% endtrans %} {{commentaire.pseudo }}</p>
            <div>{{ commentaire.contenu }}</div>
        
            {% else %}
            <p>{% trans %}There's no comment yet{% endtrans %}</p>
        {% endfor %}



                <div class="row border rounded mb-2 bg-info text-white">
                    <div class="col-md-4">
                        <span>{{ comits.author }}</span> 
                        <small class="font-italic">( {{ comits.createdAt|date('d/m/Y à H:i:s') }} )</small>
                    </div>
                    <div class="col-md-8">
                        <p>{{ comits.content|raw }}</p>
                    </div>
                </div>

       

    {% for locale in locales %}
            {% if locale != app.request.locale %}
            <a href="{{ path('change_locale', {'locale': locale}) }}">{{ locale }}</a>
            {% endif %}
    {% endfor %}
    
{% endblock %}